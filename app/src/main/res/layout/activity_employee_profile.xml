<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/Imgbackbut"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:src="@drawable/backbutton" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Ivemployeeprofile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/imageicon"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/Tvnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:text="Name"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/Ivemployeeprofile"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/Tvgens"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:text="Gender"
            android:textSize="15dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/Tvnames"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/imagecall"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/call2"
            android:layout_below="@+id/Tvgens"

            />

        <TextView
            android:id="@+id/Tvphonenumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="9849248922"
            android:textSize="15dp"
            android:layout_below="@+id/Tvgens"

            android:layout_toRightOf="@id/imagecall"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Mobile"
            android:textColor="#fff"
            android:layout_below="@id/Tvphonenumbers"
            android:layout_toRightOf="@+id/imagecall"

            />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/imagecall"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/messages" />

        <TextView
            android:id="@+id/Tvemailes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:textColor="#fff"
            android:text="Serenadesan10@gmail.com"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@id/imagecall"
            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/imageView"
            app:srcCompat="@drawable/address2" />

        <TextView
            android:id="@+id/Tvaddresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:text="Sunakothi, Lalitpur"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_below="@+id/imageView"
            />

        <Button
            android:id="@+id/btnupdateprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Update Profile"
            android:textSize="15dp"
            android:padding="10dp"
            android:background="@drawable/button"
            android:layout_below="@+id/imageView5"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:textStyle="bold"

            />

        <View
            android:id="@+id/iew"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="@color/textfieldfont"
            android:layout_below="@+id/btnupdateprofile"
            android:paddingLeft="15dp"
            />
        <Button
            android:id="@+id/Btnworkprof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="View Work Profile"
            android:textSize="15dp"
            android:padding="10dp"
            android:background="@drawable/button"
            android:layout_below="@+id/iew"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:textStyle="bold"

            />





        <TextView
            android:id="@+id/Tvworks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_below="@+id/Btnworkprof"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/Tvjobcomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_below="@+id/Tvworks"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/Tvlanguages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:layout_below="@+id/Tvjobcomp"
            android:layout_centerHorizontal="true"
            />
        <Button
            android:id="@+id/Btnpayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@drawable/button"
            android:visibility="invisible"
            android:layout_below="@+id/Tvlanguages"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/BtnUpdateWorkprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:textColor="#fff"
            android:textSize="16dp"
            android:text="Update Work Profile"
            android:padding="5dp"
            android:background="@drawable/button"
            android:visibility="invisible"
            android:layout_below="@+id/Btnpayment"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/BtnUpdateWorkprofile"/>
    </RelativeLayout>
</ScrollView>